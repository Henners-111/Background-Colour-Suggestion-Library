{
  "name": "background-colour-suggestion-library",
  "version": "0.1.0",
  "description": "Suggest an accessible background color (light or dark) for transparent logo/images to maximize contrast.",
  "keywords": [
    "background",
    "contrast",
    "accessibility",
    "logo",
    "color",
    "colour",
    "wcag"
  ],
  "license": "MIT",
  "author": "Henry Nethercot",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Henners-111/Background-Colour-Suggestion-Library.git"
  },
  "bugs": {
    "url": "https://github.com/Henners-111/Background-Colour-Suggestion-Library/issues"
  },
  "homepage": "https://github.com/Henners-111/Background-Colour-Suggestion-Library#readme",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist/index.d.ts",
    "dist/esm/index.js",
    "dist/esm/index.js.map",
    "dist/cjs/index.js",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rimraf dist",
  "build": "npm run clean && npm run build:types && npm run build:esm && npm run build:cjs",
  "build:types": "tsc -p tsconfig.types.json",
  "build:esm": "tsc -p tsconfig.esm.json",
  "build:cjs": "tsc -p tsconfig.cjs.json",
    "test": "vitest run",
    "dev": "vitest watch",
    "lint": "eslint \"src/**/*.ts\" || echo lint warnings"
  },
  "devDependencies": {
    "@types/node": "^20.19.11",
    "@types/pngjs": "^6.0.5",
    "eslint": "^8.57.1",
    "pngjs": "^7.0.0",
    "rimraf": "^5.0.10",
    "typescript": "^5.9.2",
    "vitest": "^1.6.1"
  },
  "engines": {
    "node": ">=18"
  }
}
